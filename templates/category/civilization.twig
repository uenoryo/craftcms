{% extends "layout/default" %}

{% block content %}

{% set civilization = category %}

{% set cardPerPage = 2 %}

{% set query = craft
  .entries
  .section('card')
  .relatedTo(category)
  .limit(cardPerPage) %}

{% paginate query as paginator, cards %}

<h1>{{ civilization }}文明</h1>

<div class="Civilization Civilization--{{ civilization.slug }}">
  {{ include("component/_cards", {cards: cards, paginator: paginator}) }}
</div>

{% endblock %}
